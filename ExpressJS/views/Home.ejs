<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
</head>
<body>
    <style>
         .product-card {
            border: 1px solid #000;
            margin: 5px;
            padding: 5px;
            background-color: rgb(57, 57, 224);
            text-align: center;
        }
        h1{
            text-align: center;
        }
    </style>

    <h1>Product List</h1>
     <% products.forEach(function(product) { %>
         <div class="product-card">
             <h2><%= product.name %></h2>
         </div>
    <% }); %>

    
</body>
</html>